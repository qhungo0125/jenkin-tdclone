        // }

        stage('Deploy') {
            steps {
                script {
                    sshagent(credentials:['topdevclone-vm']) {
                        // Ensure the .ssh directory exists and then add the host key to known_hosts
                        sh """
                        mkdir -p ~/.ssh
                        ssh-keyscan -H 20.6.10.42 >> ~/.ssh/known_hosts
                        """

                        // Deployment commands
                        // echo "Azurevm@20120298" | sudo -S rm -r jenkin-tdclone
                        sh """
                        ssh -t azureuser@20.6.10.42 'sudo rm -r jenkin-tdclone && git clone https://github.com/qhungo0125/jenkin-tdclone.git && cd jenkin-tdclone/express_service && sudo docker-compose up -d '
                        """
                    }
                }
            }
        }
    }
}
